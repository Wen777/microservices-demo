{
    "family": "monitor",
    "containerDefinitions": [
        {
            "name": "influxsrv",
            "image": "tutum/influxdb",
            "cpu": 2,
            "memory": 300,
            "portMappings": [
                {
                    "containerPort": 8083,
                    "hostPort": 8083
                },
                {
                    "containerPort": 8086,
                    "hostPort": 8086
                }
            ],
            "essential": true,
            "environment": [
                {"name": "PRE_CREATE_DB", "value": "cadvisor"},
                {"name": "ADMIN_USER", "value": "root"},
                {"name": "INFLUXDB_INIT_PWD", "value": "hyperpilot"}
            ]
        },
        {
            "name": "grafana",
            "image": "grafana/grafana",
            "cpu": 2,
            "memory": 300,
            "portMappings": [
                {
                    "containerPort": 3000,
                    "hostPort": 3000
                }
            ],
            "essential": true,
            "links": ["influxsrv"],
            "environment": [
                {"name": "INFLUXDB_HOST", "value": "localhost"},
                {"name": "INFLUXDB_PORT", "value": "8086"},
                {"name": "INFLUXDB_NAME", "value": "cadvisor"},
                {"name": "INFLUXDB_USER", "value": "root"},
                {"name": "INFLUXDB_PASS", "value": "hyperpilot"}
            ]
        },
        {
            "name": "cadvisor",
            "image": "google/cadvisor",
            "cpu": 4,
            "memory": 300,
            "links": ["influxsrv"],
            "command": ["-storage_driver=influxdb", "-storage_driver_db=cadvisor", " -storage_driver_host=influxsrv:8086" "-storage_driver_user=root", "-storage_driver_password=hyperpilot"],
            "portMappings": [
                {
                    "containerPort": 8080,
                    "hostPort": 8080
                }
            ],
            "essential": true,
            "mountPoints": [
                {
                    "sourceVolume": "root",
                    "containerPath": "/rootfs",
                    "readOnly": true
                },
                {
                    "sourceVolume": "var_run",
                    "containerPath": "/var/run",
                    "readOnly": false
                },
                {
                    "sourceVolume": "sys",
                    "containerPath": "/sys",
                    "readOnly": true
                },
                {
                    "sourceVolume": "var_lib_docker",
                    "containerPath": "/var/lib/docker",
                    "readOnly": true
                }
            ]
        }
    ],
    "volumes": [
        {
            "name": "root",
            "host": {
                "sourcePath": "/"
            }
        },
        {
            "name": "var_run",
            "host": {
                "sourcePath": "/var/run"
            }
        },
        {
            "name": "sys",
            "host": {
                "sourcePath": "/sys"
            }
        },
        {
            "name": "var_lib_docker",
            "host": {
                "sourcePath": "/var/lib/docker/"
            }
        }
    ]
}
